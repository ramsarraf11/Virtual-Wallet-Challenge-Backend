{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Virtual Wallet",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "preLaunchTask": "npm: start",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development",
                "PORT": "5000",
                "MONGODB_URL": "mongodb://localhost:27017/virtual_wallet",
                "JWT_SECRET": "your_jwt_secret_key",
                "JWT_EXPIRE": "1h",
                "REDIS_URL": "redis://localhost:6379"
            },
            "runtimeArgs": [
                "--inspect",
                "--require",
                "dotenv/config"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Debug with Redis",
            "configurations": ["Launch Virtual Wallet"]
        }
    ]
}